PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/ai-builder
# POSTGRES_URL=postgresql://user:password@localhost:5432/ai-builder

# JWT
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here_change_in_production
JWT_EXPIRE=7d

# Email Service (Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_from_gmail

# OAuth (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# AWS S3 (File Upload)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=ai-builder-uploads

# ==================== AI MODEL API KEYS ====================
# OpenAI - https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Gemini - https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Anthropic Claude - https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ==================== OPTIONAL SERVICES ====================
# Redis for caching
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Stripe Payment (optional)
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=

# Razorpay Payment (optional)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
# Stripe / Razorpay (Payment)
STRIPE_PUBLIC_KEY=pk_test_your_key
STRIPE_SECRET_KEY=sk_test_your_key
RAZORPAY_KEY_ID=your_razorpay_key
RAZORPAY_KEY_SECRET=your_razorpay_secret

# OpenAI (AI Generation)
OPENAI_API_KEY=sk-your_openai_key_here

# Redis (Cache & Queue)
REDIS_URL=redis://localhost:6379

# Frontend
FRONTEND_URL=http://localhost:3000

# Deployment
VERCEL_TOKEN=your_vercel_token
HEROKU_API_KEY=your_heroku_api_key
